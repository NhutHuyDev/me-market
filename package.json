{
  "name": "memarket",
  "version": "1.0.0",
  "description": "E-commerce application project ~ 2024",
  "main": "server.js",
  "engines": {
    "node": "^20.12"
  },
  "scripts": {
    "rebuild:be": "docker compose build backend && docker compose rm --force --stop backend && docker compose up -d backend",
    "docker:seed:mongo": "docker-compose exec mongo mongoimport --host localhost --db ecommerce_express_dev --collection $collection --authenticationDatabase admin --username root --password example --type json --file $file --jsonArray",
    "rebuild:mongo": "docker compose build mongo && docker compose rm --force --stop mongo && docker compose up -d mongo",
    "watch": "watchy --no-init-spawn --debounce 2 --watch src -- docker compose restart backend",
    "start": "node --inspect=0.0.0.0 ./dist/src/server.js",
    "build": "rimraf dist && swc ./src -d ./dist",
    "dev": "npx nodemon",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "author": "nguyenhuydev",
  "license": "ISC",
  "dependencies": {
    "@types/nodemailer": "^6.4.14",
    "argon2": "^0.40.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "google-auth-library": "^9.8.0",
    "helmet": "^7.1.0",
    "mongoose": "^8.3.1",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.7",
    "nodemailer": "^6.9.13",
    "otp-generator": "^4.0.1",
    "typecript": "^0.0.1-security",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.4.13",
    "@tsconfig/node20": "^20.1.4",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.7",
    "@types/otp-generator": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "watchy": "^0.10.1"
  }
}
